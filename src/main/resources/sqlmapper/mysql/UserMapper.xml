<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="User">
    <!-- 전체 -->
    <!-- #{변수명} -->
	<select id="selectAll" parameterType="Map" resultType="Map">
        SELECT *
        from MEMBER
        where 1 = 1
	</select>

    <!-- 검색 -->
	<select id="selectSearch" parameterType="Map" resultType="Map">
        SELECT *
        from MEMBER
        where 1 = 1
        <choose>
            <when test="SEARCH == 'ID'">
                <![CDATA[and ID > #{words}]]>
            </when>
            <when test="SEARCH == 'ID'">
                and NAME like CONCAT(#{words}, '%')
            </when>
        </choose>
        ;
    </select>

    <!-- 상세 -->
	<select id="selectByUID" parameterType="Map" resultType="Map">
    SELECT *
    from MEMBER
    where MEMBER_ID = #{MEMBER_ID}
	</select>

    <!-- 입력 -->
    <!-- insert id="부여하는 이름"-->
    <insert id="insert" parameterType="Map">
    INSERT INTO MEMBER
    (ID, PW, EMAIL, NAME, GENDER_ID, BIRTHDATE, TELECOM_ID, PHONENUM, MEMBER_ID)
    values
    (#{ID}, #{PW}, #{EMAIL}, #{NAME}, #{GENDER_ID}, #{BIRTHDATE}, #{TELECOM_ID}, #{PHONENUM}, #{MEMBER_ID})
    </insert>

    <!-- 수정 -->
    <update id="update" parameterType="Map">
    UPDATE MEMBER
    SET NAME = #{NAME}
    WHERE MEMBER_ID = #{MEMBER_ID}
    </update>

    <!-- 삭제 -->
    <delete id="delete" parameterType="Map">
    DELETE FROM MEMBER
    WHERE MEMBER_ID = #{MEMBER_ID}
    </delete>
</mapper>